<h1>User accounts</h1>

<% if @users.length > 0 %>
    <%= form_tag(search_users_path, 
                 method: :get, 
                 id: "search") do %>
      <fieldset>
        <%= text_field_tag(:query, '', autocomplete: 'off') %>
        <%= submit_tag("Search") %>
      </fieldset>
    <% end %>
    
    <div id='main-input-area'>
      <%= render partial: 'users_list', object: @users %>
    </div>
<% end %>
<br>
<div class="digg_pagination">
  <div>
    <%= page_entries_info @users %>
  </div>
  <%= will_paginate @users, container: false %>
</div>
<br>

<%= link_to 'New user', new_user_path(page: @users.current_page) %>
